{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/app.ts", "bin/**/*"],
  "exclude": ["node_modules"]
}
